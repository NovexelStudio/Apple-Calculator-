<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/calculatorGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/displayArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:paddingHorizontal="20dp">

            <ImageButton
                android:id="@+id/activeCalculatorpercentage"
                android:layout_width="37dp"
                android:layout_height="21dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_button_pill"
                android:contentDescription="@string/desc_switch_to_percentage"
                android:padding="12dp"
                android:src="@drawable/ic_percentage"
                android:fontFamily="@font/suf"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/text_hint"
                android:fontFamily="@font/suf"
                android:textSize="26sp"
                app:layout_constraintBottom_toTopOf="@+id/tvDisplay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:ellipsize="none"
                android:gravity="end"
                android:includeFontPadding="false"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/default_zero"
                android:textColor="@color/text_numbers"
                android:textSize="84sp"
                android:fontFamily="@font/suf"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/buttonsGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="14dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/AC"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_ac"
                    android:textColor="@color/text_functions"
                    android:textSize="22sp"
                    app:backgroundTint="@color/btn_function"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pOrm"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:fontFamily="@font/suf"
                    android:text="@string/btn_plus_minus"
                    android:textColor="@color/text_functions"
                    android:textSize="26sp"
                    app:backgroundTint="@color/btn_function"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modulas"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_percent"
                    android:textColor="@color/text_functions"
                    android:textSize="24sp"
                    app:backgroundTint="@color/btn_function"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/divide"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_divide"
                    android:textSize="34sp"
                    app:backgroundTint="@color/btn_operator"
                    app:cornerRadius="999dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="14dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no7"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_7"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no8"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_8"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no9"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_9"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Multiplication"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_multiply"
                    android:textSize="34sp"
                    app:backgroundTint="@color/btn_operator"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="14dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no4"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_4"
                    android:fontFamily="@font/suf"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no5"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_5"
                    android:fontFamily="@font/suf"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no6"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_6"
                    android:fontFamily="@font/suf"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Subtraction"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_subtract"
                    android:fontFamily="@font/suf"
                    android:textSize="34sp"
                    app:backgroundTint="@color/btn_operator"
                    app:cornerRadius="999dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="14dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no1"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_1"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no2"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_2"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no3"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_3"
                    android:textSize="28sp"
                    android:fontFamily="@font/suf"
                    app:backgroundTint="@color/btn_number"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Addition"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_add"
                    android:textSize="34sp"
                    android:fontFamily="@font/suf"
                    app:backgroundTint="@color/btn_operator"
                    app:cornerRadius="999dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no0"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/digit_0"
                    android:textSize="28sp"
                    android:fontFamily="@font/suf"
                    app:backgroundTint="@color/btn_number"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_delete"
                    android:textSize="24sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dot"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_dot"
                    android:textSize="28sp"
                    app:backgroundTint="@color/btn_number"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Calculate"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btn_equal"
                    android:textSize="34sp"
                    app:backgroundTint="@color/btn_operator"
                    android:fontFamily="@font/suf"
                    app:cornerRadius="999dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/percentageArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/activeCalculator"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:background="@drawable/rounded_button_pill"
            android:contentDescription="@string/desc_switch_to_calculator"
            android:padding="12dp"
            android:src="@drawable/ic_calculator"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@string/percentage_calculator_title"
            android:textAllCaps="true"
            android:textColor="@color/text_numbers"
            android:fontFamily="@font/suf_bold"
            android:textSize="22sp"
            android:layout_marginBottom="50dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/text_field"
            android:gravity="center"
            android:hint="@string/hint_enter_number"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="@color/text_numbers"
            android:fontFamily="@font/suf"
            android:textColorHint="@color/text_hint" />

        <EditText
            android:id="@+id/etPercentage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_field"
            android:gravity="center"
            android:hint="@string/hint_percentage"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="@color/text_numbers"
            android:fontFamily="@font/suf"
            android:textColorHint="@color/text_hint" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/result_label"
            android:textColor="@color/text_numbers"
            android:textSize="32sp"
            android:fontFamily="@font/suf"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculatePerc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:text="@string/btn_calculate"
            android:textSize="18sp"
            app:backgroundTint="@color/btn_operator"
            android:fontFamily="@font/suf_bold"
            app:cornerRadius="16dp" />

    </LinearLayout>
</LinearLayout>